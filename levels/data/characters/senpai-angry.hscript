maskPath = "characters/senpai/senpai_mask";

function create()
{
	for (k in game.stage.pieces.keys())
	{
		if (game.stage.pieces[k].idles != null)
		{
			for (i in 0...game.stage.pieces[k].idles.length)
			{
				if (game.stage.pieces[k].animation.exists(game.stage.pieces[k].idles[i] + "-scared"))
					game.stage.pieces[k].idles[i] += "-scared";
			}
			game.stage.pieces[k].playAnim(game.stage.pieces[k].animation.curAnimName + "-scared");
		}
	}
}